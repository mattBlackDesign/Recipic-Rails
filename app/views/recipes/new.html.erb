	<!-- <form class="navbar-form" role="search"> -->
	<select class="itemSearch form-control" multiple="multiple">
		<option value="0">Search Keywords</option>
	</select>
	<!-- </form> -->


	<br>

	<label>Body</label>
	<%= f.text_area :body, class: 'form-control' %>
	<br>

	
	<%= f.submit "Create Recipe", class: "btn btn-primary" %>

<% end %>

</div>
